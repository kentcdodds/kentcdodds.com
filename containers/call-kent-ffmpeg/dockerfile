FROM node:24-bookworm-slim

RUN apt-get update \
	&& apt-get install -y --no-install-recommends ffmpeg ca-certificates \
	&& rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY containers/call-kent-ffmpeg/*.mjs /app/

ENV CALL_KENT_FFMPEG_CONTAINER_PORT=8080
EXPOSE 8080

CMD ["node", "/app/start-server.mjs"]
