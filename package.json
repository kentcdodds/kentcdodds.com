{
  "name": "kentcdodds.com",
  "version": "1.0.0",
  "engines": {
    "node": "18",
    "npm": "8"
  },
  "description": "A remix version of kentcdodds.com",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kentcdodds/kentcdodds.com.git"
  },
  "keywords": [],
  "author": "Kent C. Dodds <me@kentcdodds.com> (https://kentcdodds.com/)",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/kentcdodds/kentcdodds.com/issues"
  },
  "homepage": "https://github.com/kentcdodds/kentcdodds.com#readme",
  "scripts": {
    "postinstall": "patch-package --patch-dir other/patches",
    "prepare": "husky install || true",
    "css:watch": "npm run build:css -- --w",
    "clean": "rimraf ./node_modules/.cache ./server/dist ./build ./public/build \"./app/styles/**/*.css\"",
    "prebuild": "npm run clean && echo All clean ✨",
    "build:css": "postcss styles/**/*.css --base styles --dir app/styles",
    "build:css:prod": "npm run build:css -- --env production",
    "build:remix": "remix build --sourcemap",
    "build:server": "tsx ./other/build-server.js",
    "build": "npm run build:css:prod && npm run build:remix && npm run build:server && tsx ./other/generate-build-info",
    "dev": "pm2-dev ./other/pm2.config.js",
    "runfile": "tsx ./other/runfile.js",
    "start": "cross-env NODE_ENV=production node ./index.js",
    "start:mocks": "cross-env NODE_ENV=production MOCKS=true tsx ./index.js",
    "curl:blog": "curl --HEAD --silent http://localhost:$PORT/blog > /dev/null || true",
    "prime-cache:prod": "cross-env PORT=4001 npx start-server-and-test start http-get://localhost:4001/build/info.json curl:blog && echo cache primed ⚡️",
    "prime-cache:mocks": "cross-env PORT=4001 npx start-server-and-test start:mocks http-get://localhost:4001/build/info.json curl:blog && echo cache primed ⚡️",
    "test:e2e:dev": "cross-env PORT=3000 playwright test",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "cross-env PORT=8811 playwright test",
    "test:e2e:install": "npx playwright install chromium --with-deps",
    "test": "jest",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext js,jsx,ts,tsx .",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|gql|graphql|mdx|vue)\"",
    "typecheck": "tsc -b .",
    "validate": "./other/validate",
    "setup": "npm install && prisma migrate reset --force && npm run validate && npm run prime-cache:mocks && npm run test:e2e:install && npm run test:e2e:run"
  },
  "prisma": {
    "seed": "tsx other/runfile prisma/seed.ts"
  },
