{
  "name": "kentcdodds.com",
  "version": "1.0.0",
  "engines": {
    "node": "14"
  },
  "description": "A remix version of kentcdodds.com",
  "main": "remix.config.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kentcdodds/remix-kentcdodds.com.git"
  },
  "keywords": [],
  "author": "Kent C. Dodds <me@kentcdodds.com> (https://kentcdodds.com/)",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/kentcdodds/remix-kentcdodds.com/issues"
  },
  "homepage": "https://github.com/kentcdodds/remix-kentcdodds.com#readme",
  "scripts": {
    "build": "npm run css:build && remix build",
    "dev": "pm2-dev pm2.config.js",
    "start": "node start.js",
    "css:build": "postcss styles --base styles --dir app/ --env production",
    "css:watch": "postcss styles --base styles --dir app/ -w",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test:e2e": "start-server-and-test dev http://localhost:3000 cy:open",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test start http://localhost:8811 cy:run",
    "test": "kcd-scripts test",
    "lint": "kcd-scripts lint",
    "format": "kcd-scripts format",
    "typecheck": "concurrently --names \"app,cypress\" --prefix-colors \"red,green,blue\" \"tsc --project app --noEmit\" \"tsc --project cypress --noEmit\"",
    "validate": "kcd-scripts validate",
    "setup": "npm install && npm run validate"
  },
  "dependencies": {
    "@mdx-js/mdx": "^1.6.22",
    "@mdx-js/react": "^1.6.22",
    "@remark-embedder/cache": "^1.0.0",
    "@remark-embedder/core": "^1.2.4",
    "@remark-embedder/transformer-oembed": "^1.0.1",
    "@remix-run/cli": "^0.13.3",
    "@remix-run/data": "^0.13.3",
    "@remix-run/express": "^0.13.3",
    "@remix-run/react": "^0.13.3",
    "@rollup/plugin-babel": "^5.3.0",
    "@sindresorhus/slugify": "^1.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "gray-matter": "^4.0.2",
    "mdx-bundler": "^1.1.3",
    "nodemailer": "^6.5.0",
    "ow": "^0.23.0",
    "pm2": "^4.5.5",
    "prismjs": "^1.23.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router": "^6.0.0-beta.0",
    "react-router-dom": "^6.0.0-beta.0",
    "rehype-document": "^5.1.0",
    "rehype-format": "^3.1.0",
    "rehype-stringify": "^8.0.0",
    "remark-parse": "^9.0.0",
    "remark-prism": "^1.3.4",
    "remark-rehype": "^8.0.0",
    "rollup": "^2.40.0",
    "rollup-plugin-terser": "^7.0.2",
    "sort-by": "^1.2.0",
    "tailwindcss": "^2.0.3",
    "unified": "^9.2.1",
    "unist-util-visit": "^2.0.3",
    "wait-on": "^5.2.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.4.0",
    "@testing-library/cypress": "^7.0.4",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^12.8.0",
    "@types/cookie-session": "^2.0.42",
    "@types/estree": "0.0.46",
    "@types/express": "^4.17.11",
    "@types/node-fetch": "^2.5.8",
    "@types/nodemailer": "^6.4.0",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "autoprefixer": "^10.2.4",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "cypress": "^6.6.0",
    "eslint-import-resolver-jest": "^3.0.0",
    "kcd-scripts": "^8.0.2",
    "postcss": "^8.2.6",
    "postcss-cli": "^8.3.1",
    "start-server-and-test": "^1.12.0",
    "typescript": "^4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "kcd-scripts pre-commit"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "coverage",
    "server-build",
    "public/build",
    "*.d.ts",
    "storybook-static"
  ]
}
