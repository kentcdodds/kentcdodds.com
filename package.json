{
  "name": "kentcdodds.com",
  "version": "1.0.0",
  "engines": {
    "node": "14"
  },
  "description": "A remix version of kentcdodds.com",
  "main": "remix.config.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kentcdodds/remix-kentcdodds.com.git"
  },
  "keywords": [],
  "author": "Kent C. Dodds <me@kentcdodds.com> (https://kentcdodds.com/)",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/kentcdodds/remix-kentcdodds.com/issues"
  },
  "homepage": "https://github.com/kentcdodds/remix-kentcdodds.com#readme",
  "scripts": {
    "css:watch": "postcss styles/**/*.css --base styles --dir app/styles --w",
    "css:build": "postcss styles/**/*.css --base styles --dir app/styles --env production",
    "prebuild": "npm run clean",
    "build": "npm run css:build && remix build",
    "clean": "rimraf ./node_modules/.cache ./build ./public/build \"./app/styles/**/*.css\"",
    "postinstall": "npm run build",
    "dev": "pm2-dev pm2.config.js",
    "start": "node start.js",
    "start:mocks": "ts-node -r ./mocks start.js",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test:e2e": "start-server-and-test dev http://localhost:3000 cy:open",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test start:mocks http://localhost:8811 cy:run",
    "test": "kcd-scripts test",
    "lint": "kcd-scripts lint",
    "format": "kcd-scripts format",
    "typecheck": "tsc -b",
    "validate": "npm run typecheck"
  },
  "dependencies": {
    "@octokit/rest": "^18.3.5",
    "@remark-embedder/cache": "^1.0.0",
    "@remark-embedder/core": "^1.2.4",
    "@remark-embedder/transformer-oembed": "^1.0.1",
    "@remix-run/data": "^0.14.1",
    "@remix-run/express": "^0.14.1",
    "@remix-run/react": "^0.14.1",
    "@sindresorhus/slugify": "^1.1.0",
    "@tailwindcss/jit": "^0.1.8",
    "@tailwindcss/typography": "^0.4.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "firebase": "^8.3.1",
    "firebase-admin": "^9.5.0",
    "gray-matter": "^4.0.2",
    "mdx-bundler": "^3.1.2",
    "node-fetch": "^2.6.1",
    "nodemailer": "^6.5.0",
    "nodemailer-mailgun-transport": "^2.0.2",
    "ow": "^0.23.0",
    "pm2": "^4.5.5",
    "prismjs": "^1.23.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router": "^6.0.0-beta.0",
    "react-router-dom": "^6.0.0-beta.0",
    "rehype-document": "^5.1.0",
    "rehype-format": "^3.1.0",
    "rehype-stringify": "^8.0.0",
    "remark-gfm": "^1.0.0",
    "remark-parse": "^9.0.0",
    "remark-prism": "^1.3.4",
    "remark-rehype": "^8.0.0",
    "sort-by": "^1.2.0",
    "tailwindcss": "^2.0.4",
    "unified": "^9.2.1",
    "unist-util-visit": "^2.0.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^0.14.1",
    "@testing-library/cypress": "^7.0.4",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^13.0.13",
    "@types/cookie-session": "^2.0.42",
    "@types/estree": "0.0.46",
    "@types/express": "^4.17.11",
    "@types/node-fetch": "^2.5.8",
    "@types/nodemailer": "^6.4.1",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/uuid": "^8.3.0",
    "autoprefixer": "^10.2.5",
    "chalk": "^4.1.0",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "cypress": "^6.8.0",
    "eslint-import-resolver-jest": "^3.0.0",
    "glob": "^7.1.6",
    "glob-promise": "^4.1.0",
    "kcd-scripts": "^8.1.1",
    "msw": "^0.27.2",
    "postcss-cli": "^8.3.1",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^1.12.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "kcd-scripts pre-commit"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "coverage",
    "build",
    "public/build",
    "storybook-static",
    "*.ignored.*"
  ]
}
